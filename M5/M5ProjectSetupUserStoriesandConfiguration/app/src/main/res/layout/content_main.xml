<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".views.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="15dp"
        android:text="Username:"
        app:layout_constraintBottom_toTopOf="@+id/name_input"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_label"
        android:layout_marginStart="162dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        android:layout_marginBottom="422dp"
        android:onClick="onSavePressed"
        android:text="Save Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Input your name"
        app:layout_constraintBottom_toTopOf="@+id/button_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/skill_1__label"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:text="Pilot"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="335dp" />

    <TextView
        android:id="@+id/skill_2_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fighter"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="335dp" />

    <TextView
        android:id="@+id/skill_3_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:text="Trader"
        app:layout_constraintEnd_toStartOf="@+id/skill_2_label"
        tools:layout_editor_absoluteY="335dp" />

    <TextView
        android:id="@+id/skill_5_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engineer"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="335dp" />

</android.support.constraint.ConstraintLayout>